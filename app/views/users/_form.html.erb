<%= form_for(@user) do |f| %>
  <%= render 'shared/error_messages', this: @user %>

  <div class="field">
    <%= f.label :name %><br />
    <%= f.text_field :name %>
  </div>
  <div class="field">
    <%= f.label :description %><br />
    <%= f.text_area :description %>
  </div>
  <div class="field">
    <%= f.label :avatar %><br />
    <%= f.file_field :avatar %>
  </div>  
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
